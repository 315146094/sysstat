#!/bin/sh
if [ "$1" = "all" ] || [ "$1" = "simtest" ]
then
	make distclean
	./configure sa_lib_dir=. conf_dir=. sa_dir=tests && make CFLAGS="-D DEBUG -D TEST" && make simtest
fi
if [ "$1" = "all" ] || [ "$1" = "test" ]
then
	make distclean
	./configure sa_lib_dir=. conf_dir=. sa_dir=tests && make CFLAGS="-D DEBUG" && make test
fi
